# Step 1: Install Node Version Manager (nvm)
curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash

# Step 2: Reload terminal to activate nvm
source ~/.bashrc

# Step 3: Install Node.js version 20.16.0 using nvm
nvm install 20.16.0
nvm use 20.16.0

# Step 4: Install Sass version 3.7.4 using npm
npm install -g sass

# Step 5: Confirm Sass installation
sass --version
